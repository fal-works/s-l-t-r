{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "target": "esnext",
    "module": "CommonJS",
    "noEmitOnError": true,
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "newLine": "LF",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "typedocOptions": {
    "out": "docs",
    "entryPoints": [
      "./src/index.ts"
    ],
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "theme": "minimal",
    "readme": "README.md",
  }
}
